<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:orientation="vertical">

	<LinearLayout android:id="@+id/header"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:orientation="vertical">
		<TableLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:stretchColumns="0,1"
			android:shrinkColumns="0,1">
			<TableRow>
				<TextView 
					android:text="Msg. Data" 
					android:textSize="12px" 
					android:maxLines="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView 
					android:text="Sender" 
					android:textSize="12px" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</TableRow>
			<TableRow>
				<TextView android:id="@+id/MessageDate"
					android:text="31/01/2008 08:40" 
					android:textStyle="bold"
					android:textSize="15px" 
					android:maxLines="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView 
					android:id="@+id/MessageSender"
					android:text="Mario Rossi" 
					android:textStyle="bold"
					android:textSize="15px" 
					android:maxLines="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</TableRow>
			<TableRow>
				<TextView 
					android:text="Meting Time" 
					android:textSize="12px" 
					android:maxLines="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView 
					android:text="Meeting Object" 
					android:textSize="12px" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</TableRow>
			<TableRow>
				<TextView 
					android:id="@+id/MeetingTime"
					android:text="Mon 2 2003 8:30" 
					android:textSize="12px"
					android:maxLines="2" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView 
					android:id="@+id/MeetingShortDesc"
					android:text="Have a diner at 'Chez Carlos'"
					android:textSize="12px" 
					android:maxLines="2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</TableRow>
		</TableLayout>
	</LinearLayout>

	<LinearLayout 
		android:id="@+id/body"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:orientation="vertical">
		<TableLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:shrinkColumns="0">
			<TableRow>
				<TextView
					android:id="@+id/MeetingLongDesc"
					android:text="jsdqfgkq"
					android:textSize="12px"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

			</TableRow>
			<TableRow>
				<TextView android:id="@+id/MeetingAttends"
					android:text="jsdqfgkq"
					android:textSize="12px"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

			</TableRow>
		</TableLayout>
	</LinearLayout>
</LinearLayout>
