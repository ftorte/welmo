<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:visibility="visible" android:soundEffectsEnabled="true">
	<ImageView android:id="@+id/flag" android:padding="1dip"
		android:layout_marginTop="8dip"
		android:layout_marginBottom="8dip" 
		android:layout_marginLeft="8dip"
		android:layout_marginRight="8dip" 
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" 
		android:layout_width="30dip" 
		android:layout_height="20dip"
		android:src="@drawable/ad">
	</ImageView>
	<TextView android:id="@+id/valuetarget" 
		android:text="1000.00 " 
		android:layout_alignTop="@+id/flag" 
		android:layout_toRightOf="@+id/flag" 
		android:layout_height="20dip" 
		android:layout_width="230dip" 
		android:gravity="right" 
		android:typeface="sans" android:textSize="16dip" android:textStyle="normal|bold" android:textColor="@color/sky_blu_clear"> 
	</TextView>
	<TextView android:id="@+id/currencycode" 
		android:layout_alignTop="@+id/valuetarget" 
		android:layout_toRightOf="@+id/valuetarget" 
		android:layout_height="20dip" 
		android:layout_marginRight="8dp"
		android:layout_marginBottom="8dp"
		android:text=" EUR" 
		android:typeface="sans" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/alluminium_clear" android:layout_width="60dip"> 
	</TextView>
	<TextView android:id="@+id/countryname"
		android:layout_marginTop="8dip" 
		android:layout_width="150dip"
		android:layout_height="16dip" 
		android:text="Country Test" 
		android:textSize="14sp" 
		android:typeface="monospace"
		android:textStyle="bold" 
		android:layout_toRightOf="@+id/flag" android:layout_below="@+id/valuetarget" android:layout_alignParentLeft="true">
	</TextView>
	<TextView android:id="@+id/sourcetargetrate" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"  
		
		android:layout_toRightOf="@+id/countryname"
		
		android:typeface="sans" 
		android:textStyle="normal" 
		android:gravity="right" 
		android:textSize="14sp" android:layout_below="@+id/currencycode" android:layout_alignParentRight="true" android:layout_marginRight="8dip" android:text="[1 EUR = 1.34 USD] "> 
	</TextView> 


</RelativeLayout>