<resources>
    
    <!-- ScrollView style -->
	
	<style name="scroll_style">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Main Activity Style -->
    
    <style name="main_layout">
        <item name="android:padding">6dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <!-- Main Activity Sync All Style -->
      
    <style name="sync_all_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dip</item>
    </style>
    
    <style name="sync_all_shape">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">38dip</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/sync_all_shape</item>
    </style>
    
    <style name="sync_all_linear_lh">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">38dip</item>
    </style>
    
    <style name="sync_all_linear_lv">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="sync_all_icon_logo">
        <item name="android:layout_width">34dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:src">@drawable/icon_logo</item>
    </style>
    
    <style name="sync_all_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:text">"Sync All"</item>
        <item name="android:textSize">13dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>
    
    <style name="sync_all_arrow">
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Main Activity Sync Style -->
     
    <style name="sync_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:paddingLeft">2dip</item>
    </style>
    
    <style name="sync_shape">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46dip</item>
        <item name="android:src">@drawable/sync_shape</item>
        <item name="android:focusable">true</item>
    </style>
     <style name="sync_shape_2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">70dip</item>
        <item name="android:src">@drawable/sync_shape_2</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="sync_linear_lh">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46dip</item>
    </style>
    
    <style name="sync_icon">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">5dip</item>
    </style>
    
    <style name="sync_linear_lv">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">46dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="sync_linear_lv_2">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="sync_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:textSize">13dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>
    
    <style name="sync_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:textSize">10dip</item>
        <item name="android:textColor">#000</item>
        <item name="android:lines">1</item>
    </style>
    
    <style name="sync_arrow">
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:gravity">center</item>
    </style>

	<!-- Preferences Activity Style -->
     
    <style name="pref_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">6dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="pref_title_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dip</item>
    </style>
    
    <style name="pref_title_shape">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46dip</item>
        <item name="android:src">@drawable/sync_shape</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="pref_table_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">1</item>
        <item name="android:padding">5dip</item>
    </style>
    
    <style name="pref_label">
        <item name="android:textAlign">end</item>
        <item name="android:textSize">12dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>
    
    <style name="pref_edit_text">
        <item name="android:textSize">12dip</item>
        <item name="android:padding">4dip</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:text">none</item>
    </style>
    
    <style name="pref_button_raw">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:gravity">right</item>
    </style>
    
	<!-- About Activity Style -->
     
    <style name="about_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">6dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="copy_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlign">center</item>
        <item name="android:textSize">13dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">"copy"</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="about_logo">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:src">@drawable/logo</item>
    </style>
    
    <style name="licence_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">8dip</item>
        <item name="android:text">"licence"</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>
    
	<!-- Buttons style -->
	
	<style name="action_button">
		<item name="android:layout_width">100dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dip</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>

